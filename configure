#!/usr/bin/env bash
#
# configure
# Dodson, Wolfrath 2014
#
# Configuration script, we need to make sure all these
# dependencies are installed.
#

function isOSX {

	if [ "$(uname)" == "Darwin" ];
	then
		echo "true"
	else
		echo "false"
	fi
}

# Make sure we have privilages

if [[ $EUID -ne 0 ]];
then
	echo "Please run as root"
	exit 1
fi

# Which system?

if [ $(isOSX) == "true" ];
then
	echo "Configuring for: 0SX"
else
	echo "Configuring for $(expr substr $(uname -s) 1 5)"
fi

# Make sure dependencies are installed

LIBFI="libfreeimage-dev"
dpkg -s $LIBFI > /dev/null

if [[ $? -eq 0 ]];
then
	echo "Found $LIBFI"
else
	echo "Missing $LIBFI"
fi
